{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "./Dockerfile"
  },
  "deploy": {
    "startCommand": "node bot.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "on-failure",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000"
  },
  "routes": [
    {
      "src": "/health",
      "dest": "bot.js"
    }
  ],
  "watchPaths": [
    "*.js",
    "commands/*.js",
    "package.json",
    "package-lock.json"
  ]
} 